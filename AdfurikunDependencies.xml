<dependencies>
<!-- Android -->
  <androidPackages>
    <repositories>
      <repository>https://imobile-maio.github.io/maven</repository>                                           <!-- Maio -->
      <repository>https://github.com/amoad/amoad-android-sdk-maven/raw/master/</repository>                   <!-- Afio -->
      <repository>https://artifact.bytedance.com/repository/pangle</repository>                               <!-- Pangle -->
      <repository>https://dl-maven-android.mintegral.com/repository/mbridge_android_sdk_oversea</repository>  <!-- Mintegral -->
      <repository>https://github.com/glossom-dev/AdfurikunSDK-Android/raw/master</repository>                 <!-- Adfurikun -->
    </repositories>

    <!-- Adfurikun -->
    <!-- TODO Native SDKがリリースされた時、AARを削除して、Maven導入ところを復活する必要があり。 -->
    <androidPackage spec="jp.adfully:adfurikunsdk:4.3.0"/>
    <!-- AndroidXライブラリ -->
    <androidPackage spec="androidx.appcompat:appcompat:1.3.1"/>
    <androidPackage spec="androidx.constraintlayout:constraintlayout:2.1.0"/>
    <androidPackage spec="androidx.localbroadcastmanager:localbroadcastmanager:1.1.0"/>
    <!-- GoogleServiceAds -->
    <androidPackage spec="com.google.android.gms:play-services-ads-identifier:18.1.0"/>
    <!-- MultiDex -->
    <androidPackage spec="androidx.multidex:multidex:2.0.1"/>
    <!-- Kotlin -->
    <androidPackage spec="org.jetbrains.kotlin:kotlin-stdlib:2.0.0"/>
    <!-- 各アドネットワーク追記 -->
    <androidPackage spec="com.applovin:applovin-sdk:13.5.1"/>                     <!-- AppLovin -->
    <androidPackage spec="com.unity3d.ads:unity-ads:4.16.5"/>                     <!-- UnityAds-->
    <androidPackage spec="com.amoad:amoad-sdk:5.2.31"/>                           <!-- Afio-->
    <androidPackage spec="com.maio:android-sdk-v2:2.0.8@aar"/>                    <!-- Maio -->
    <androidPackage spec="com.vungle:vungle-ads:7.6.3"/>                          <!-- Vungle -->
    <androidPackage spec="com.linecorp.adsnetwork:fivead:2.9.20251028"/>          <!-- Five -->
    <androidPackage spec="com.pangle.global:pag-sdk:7.8.0.8"/>                    <!-- Pangle -->
    <androidPackage spec="com.unity3d.ads-mediation:mediation-sdk:9.2.0"/>        <!-- IronSource -->
    <androidPackage spec="com.mbridge.msdk.oversea:mbridge_android_sdk:17.0.61"/> <!-- Mintegral -->
    <androidPackage spec="com.fyber:marketplace-sdk:8.4.2"/>                      <!-- Fyber -->
    <androidPackage spec="com.inmobi.monetization:inmobi-ads-kotlin:11.1.0"/>     <!-- InMobi -->
    <androidPackage spec="com.google.android.gms:play-services-ads:23.2.0"/>      <!-- AdMob -->
  </androidPackages>

<!-- iOS -->
  <iosPods>
    <iosPod name="AdfurikunSDK-iOS/AppLovin" minTargetSdk="13.0" version="4.3.0"/> <!-- Xcode Project設定でEmbed&Signに設定変更必要 -->
    <iosPod name="AdfurikunSDK-iOS/UnityAds" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/Maio" minTargetSdk="13.0" version="4.3.0"/>    <!-- Xcode Project設定でEmbed&Signに設定変更必要 -->
    <iosPod name="AdfurikunSDK-iOS/Vungle" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/Five" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/Fyber" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/Afio" minTargetSdk="13.0" version="4.3.0"/>    <!-- Xcode Project設定でEmbed&Signに設定変更必要 -->
    <iosPod name="AdfurikunSDK-iOS/Pangle" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/AdMob" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/ironSource" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/Mintegral" minTargetSdk="13.0" version="4.3.0"/>
    <iosPod name="AdfurikunSDK-iOS/InMobi" minTargetSdk="13.0" version="4.3.0"/>    <!-- Xcode Project設定でEmbed&Signに設定変更必要 -->
    <!-- <iosPod name="AdfurikunSDK-iOS/AdMobMediationAdapterUnity" minTargetSdk="13.0" version="4.3.0" /> --> <!-- AdMobMediation Adapter経由でアドフリくんを導入する場合に使う -->
    <sources>
      <source>https://github.com/CocoaPods/Specs</source>
    </sources>
  </iosPods>
</dependencies>
