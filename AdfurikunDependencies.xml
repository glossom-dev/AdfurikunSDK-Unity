<dependencies>
<!-- Android -->
  <androidPackages>
    <repositories>
      <repository>https://jitpack.io</repository>                                                             <!-- Vungle -->
      <repository>https://imobile-maio.github.io/maven</repository>                                           <!-- Maio -->
      <repository>https://github.com/amoad/amoad-android-sdk-maven/raw/master/</repository>                   <!-- Afio -->
      <repository>https://artifact.bytedance.com/repository/pangle</repository>                               <!-- Pangle -->
      <repository>https://android-sdk.is.com/</repository>                                                    <!-- IronSource -->
      <repository>https://dl-maven-android.mintegral.com/repository/mbridge_android_sdk_oversea</repository>  <!-- Mintegral -->
      <repository>https://github.com/glossom-dev/AdfurikunSDK-Android/raw/master</repository>                 <!-- Adfurikun -->
    </repositories>

    <!-- Adfurikun -->
    <androidPackage spec="jp.adfully:adfurikunsdk:3.22.0"/>
    <!-- AndroidXライブラリ -->
    <androidPackage spec="androidx.annotation:annotation:1.3.0"/>
    <androidPackage spec="androidx.appcompat:appcompat:1.3.1"/>
    <androidPackage spec="androidx.constraintlayout:constraintlayout:2.1.0"/>
    <androidPackage spec="androidx.localbroadcastmanager:localbroadcastmanager:1.1.0"/>
    <!-- GoogleServiceAds -->
    <androidPackage spec="com.google.android.gms:play-services-ads:21.3.0"/>
    <!-- MultiDex -->
    <androidPackage spec="androidx.multidex:multidex:2.0.1"/>
    <!-- Kotlin -->
    <androidPackage spec="org.jetbrains.kotlin:kotlin-stdlib:1.7.0"/>
    <!-- 各アドネットワーク追記 -->
    <androidPackage spec="com.applovin:applovin-sdk:12.4.3"/>                   <!-- AppLovin -->
    <androidPackage spec="com.unity3d.ads:unity-ads:4.6.1"/>                    <!-- UnityAds(Unity環境では4.6.1を利用)-->
    <androidPackage spec="com.amoad:amoad-sdk:5.2.25"/>                         <!-- Afio -->
    <androidPackage spec="com.maio:android-sdk:1.1.16@aar"/>                    <!-- Maio -->
    <androidPackage spec="com.vungle:vungle-ads:7.3.2"/>                        <!-- Vungle -->
    <androidPackage spec="com.linecorp.adsnetwork:fivead:2.5.20221226@aar"/> <!-- Five(Unity環境では20221226を利用)-->
    <androidPackage spec="com.pangle.global:ads-sdk:5.9.0.2"/>                  <!-- Pangle -->
    <androidPackage spec="com.ironsource.sdk:mediationsdk:7.4.0"/>              <!-- IronSource -->
    <androidPackage spec="com.mbridge.msdk.oversea:reward:16.7.31"/>            <!-- Mintegral Reward -->
    <androidPackage spec="com.mbridge.msdk.oversea:newinterstitial:16.7.31"/>   <!-- Mintegral Interstitial -->
    <androidPackage spec="com.mbridge.msdk.oversea:mbnativeadvanced:16.7.31"/>  <!-- Mintegral NativeAd -->
    <androidPackage spec="com.mbridge.msdk.oversea:mbbanner:16.7.31"/>          <!-- Mintegral Banner -->
    <androidPackage spec="com.mbridge.msdk.oversea:mbsplash:16.7.31"/>          <!-- Mintegral AppOpenAd -->
    <!-- Fyber(Unity Platformバージョン「2022.2.10、2023.1.17」以上で導入可能)-->
    <!-- <androidPackage spec="com.fyber:marketplace-sdk:8.2.7"/> -->
  </androidPackages>

<!-- iOS -->
  <iosPods>
    <iosPod name="AdfurikunSDK-iOS/AppLovin" minTargetSdk="12.0" version="3.22.0"/> <!-- Xcode Project設定でEmbed&Signに設定変更必要 -->
    <iosPod name="AdfurikunSDK-iOS/UnityAds" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/Maio" minTargetSdk="12.0" version="3.22.0"/>    <!-- Xcode Project設定でEmbed&Signに設定変更必要 -->
    <iosPod name="AdfurikunSDK-iOS/Vungle" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/Five" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/Fyber" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/Afio" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/Pangle" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/AdMob" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/ironSource" minTargetSdk="12.0" version="3.22.0"/>
    <iosPod name="AdfurikunSDK-iOS/Mintegral" minTargetSdk="12.0" version="3.22.0"/>
    <sources>
      <source>https://github.com/CocoaPods/Specs</source>
    </sources>
  </iosPods>
</dependencies>
