    <androidPackage spec="com.linecorp.adsnetwork:fivead:2.5.20221226@aar"/>    <!-- Five(Unity環境では20221226を利用)-->
    <androidPackage spec="com.pangle.global:ads-sdk:5.5.0.9"/>                  <!-- Pangle -->
    <androidPackage spec="com.ironsource.sdk:mediationsdk:7.4.0"/>              <!-- IronSource -->
