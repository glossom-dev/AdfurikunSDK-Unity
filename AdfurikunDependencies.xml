    <androidPackage spec="com.mbridge.msdk.oversea:newinterstitial:16.5.71"/>   <!-- Mintegral Interstitial -->
    <androidPackage spec="com.mbridge.msdk.oversea:mbnativeadvanced:16.5.71"/>  <!-- Mintegral NativeAd -->
    <androidPackage spec="com.mbridge.msdk.oversea:mbbanner:16.5.71"/>          <!-- Mintegral Banner -->
    <androidPackage spec="com.mbridge.msdk.oversea:mbsplash:16.5.71"/>          <!-- Mintegral AppOpenAd -->
    <!-- Fyber(Unity Platformバージョン2022.2.2以上で導入可能)-->
