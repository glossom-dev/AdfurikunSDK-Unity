    <androidPackage spec="com.amoad:amoad-sdk:5.2.22"/>                         <!-- Afio -->
    <androidPackage spec="com.maio:android-sdk:1.1.16@aar"/>                    <!-- Maio -->
    <androidPackage spec="com.vungle:publisher-sdk-android:6.12.1"/>            <!-- Vungle -->
